<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="background" prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.picknpic.ui.controllers.ServiceControllers.CreateServiceController">
    <children>
        <Pane id="paleGreyPane" layoutX="66.0" layoutY="52.0" prefHeight="285.0" prefWidth="475.0">
            <children>
                <Button id="greenButton" layoutX="208.0" layoutY="241.0" mnemonicParsing="false" onAction="#handleCreateService" text="CONFIRM" />

                <!-- Service Name -->
                <Pane id="darkGreyPane" layoutX="31.0" layoutY="24.0" prefHeight="31.0" prefWidth="418.0" style="-fx-background-color: #343434;">
                    <children>
                        <TextField fx:id="serviceNameField" layoutX="13.0" layoutY="3.0" prefWidth="390.0" promptText="Enter Service Name" style="-fx-background-color: #343434; -fx-text-fill: white;" />
                    </children>
                </Pane>

                <!-- Before/After Picture -->
                <Pane id="darkGreyPane" layoutX="31.0" layoutY="67.0" prefHeight="71.0" prefWidth="201.0">
                    <children>
                        <TextField fx:id="serviceImageField" layoutX="12.0" layoutY="10.0" prefWidth="170.0" promptText="Enter Picture Url" style="-fx-background-color: #343434; -fx-text-fill: white;" />
                    </children>
                </Pane>

                <!-- Price -->
                <Pane id="darkGreyPane" layoutX="240.0" layoutY="67.0" prefHeight="71.0" prefWidth="201.0">
                    <children>
                        <TextField fx:id="servicePriceField" layoutX="14.0" layoutY="10.0" prefWidth="170.0" promptText="Enter Price" style="-fx-background-color: #343434; -fx-text-fill: white;" />
                    </children>
                </Pane>

                <!-- Description -->
                <Pane id="darkGreyPane" layoutX="32.0" layoutY="149.0" prefHeight="80.0" prefWidth="418.0">
                    <children>
                        <TextArea fx:id="serviceDescriptionField" layoutX="12.0" layoutY="10.0" prefHeight="60.0" prefWidth="390.0" promptText="Enter description" style="-fx-background-color: #343434; -fx-text-fill: white;" />
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</AnchorPane>
