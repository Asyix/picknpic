<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>

<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="fr.polytech.picknpic.ui.controllers.NavbarController" spacing="10" alignment="CENTER_LEFT">
    <!-- Add buttons to the navbar -->
    <Button text="Home" onAction="#loadHome"/>
    <Button text="Posts" onAction="#loadPosts"/>
    <Button text="Notifications" onAction="#loadNotifications"/>
    <Button text="Chat" onAction="#loadChat"/>

    <!-- Spacer to push "My Profile" and "Logout" to the right -->
    <Region HBox.hgrow="ALWAYS"/>

    <!-- "My Profile" section -->
    <Button text="My Profile" onAction="#loadProfile"/>

    <!-- Logout button -->
    <Button text="Logout" onAction="#handleLogout"/>
</HBox>