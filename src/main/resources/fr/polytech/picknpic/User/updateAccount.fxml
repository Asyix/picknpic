<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>


    <VBox xmlns:fx="http://javafx.com/fxml" fx:controller="fr.polytech.picknpic.ui.controllers.UserControllers.UpdateAccountController" spacing="10" alignment="CENTER">
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <TextField fx:id="firstNameField" promptText="First Name"/>
        <TextField fx:id="lastNameField" promptText="Last Name"/>
        <TextField fx:id="phoneNumberField" promptText="Phone Number"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Save Changes" onAction="#handleUpdateAccount"/>
            <Button text="Cancel" onAction="#loadProfile"/>
        </HBox>
    </VBox>