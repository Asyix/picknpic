<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.polytech.picknpic.ui.controllers.UserControllers.ManageUsersController"
            prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="usersTable" prefWidth="600.0" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="firstNameColumn" text="First Name" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" />
            <TableColumn fx:id="phoneNumberColumn" text="Phone Number" />
            <TableColumn fx:id="adminColumn" text="Admin" />
        </columns>
    </TableView>
    <Button text="Add User" onAction="#handleCreateUser" layoutX="10.0" layoutY="410.0" />
    <Button text="Edit User" onAction="#handleUpdateUser" layoutX="100.0" layoutY="410.0" />
    <Button text="Delete User" onAction="#handleDeleteUser" layoutX="190.0" layoutY="410.0" />
</AnchorPane>